   <form action="/admin/add_hospitals" method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="hospitalName" class="text-dark">Hospital Name</label>
            <input type="text" name="hospitalName" value="" placeholder="hospital Name" maxlength="50" minlength="5" required>
        </div>
        <div class="form-group">
            <label for="hospitalContact" class="text-dark">Hospital Contact</label>
            <input type="text" name="hospitalContact" value="" placeholder="Details" maxlength="10" minlength="9" required>
        </div>
        <div class="form-group">
