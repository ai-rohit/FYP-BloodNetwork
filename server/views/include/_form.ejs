   <!--form handling-->
   <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="firstName" class="text-dark">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="firstName" value="" placeholder="First Name" maxlength="20" minlength="2" required>
        </div>
        <div class="form-group">
            <label for="lastName" class="text-dark">Last Name</label>
            <input type="text" name="lastName" value="" placeholder="Last Name" maxlength="20" minlength="2" required>
        </div>
        <div class="form-group">
            <label for="address" class="text-dark">Address</label>
            <input type="text" name="address" value="" placeholder="Address" maxlength="40" minlength="2" required>
        </div>
        <div class="form-group">
            <label for="emailAddress" class="text-dark">Email</label>
            <input type="email" name="emailAddress" value="" placeholder="Email Address" maxlength="50" required>
        </div>

        <div class="form-group">
            <label for="password" class="text-dark">Password</label>
            <input type="password" name="password" value="" placeholder="Password" maxlength="16" minlength="8" required>
        </div>

        <div class="form-group">
            <label for="role" class="text-dark">Roles</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="role" value="basic">
                <label for="radio-1" class="radio-label">Basic</label>
            </div>

            <div class="radio inline">
                <input type="radio" id="radio-2" name="role" value="admin">
                <label for="radio-2" class="radio-label">Admin</label>
            </div>

        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Add User</button>
        </div>
    </div>
</form>