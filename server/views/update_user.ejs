    <main id="side-main">
        <div class="container">
            <div class="box-nav d-flex-between">
                <div class="filter">
                    <a href="/admin"><i class="fas fa-angle-double-left"></i>All Users</a>
                </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">
                <span class="text-dark">Update User</span>
                </h2>
            </div>
            <!--form handling-->
